<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#62B6B7">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_booking"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_roundtrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/roundtrip"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.131"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/One_Way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp"
                android:text="One Way"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.987"
                app:layout_constraintStart_toEndOf="@+id/btn_roundtrip"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp"
                android:text="From"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_roundtrip"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/kode_Penerbangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUB"
                android:textColor="#0A48FB"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/from"
                app:layout_constraintStart_toStartOf="@+id/from"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="117dp" />

            <EditText
                android:id="@+id/et_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="surabaya"
                android:inputType="text"
                android:textColorHint="#2196F3"
                app:layout_constraintEnd_toEndOf="@+id/kode_Penerbangan"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/kode_Penerbangan"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="162dp" />

            <TextView
                android:id="@+id/Departure_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure Date"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/et_from"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_from"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="227dp" />

            <EditText
                android:id="@+id/et_DepartureDate"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:hint="11/01/2022"
                android:inputType="date"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/Departure_Date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Departure_Date"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="268dp" />

            <TextView
                android:id="@+id/Pasenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasenggers"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/et_DepartureDate"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_DepartureDate"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="337dp" />

            <TextView
                android:id="@+id/tv_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="59dp"
                android:text="Adult"
                android:textColor="#2196F3"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Pasenger"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Pasenger"
                app:layout_constraintTop_toTopOf="@+id/Pasenger"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/number_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21+"
                android:textColor="#2196F3"
                app:layout_constraintEnd_toEndOf="@+id/tv_adult"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toStartOf="@+id/tv_adult"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="424dp" />

            <TextView
                android:id="@+id/tv_teenager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teenager"
                android:textColor="#2196F3"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/number_adult"
                app:layout_constraintHorizontal_bias="0.027"
                app:layout_constraintStart_toStartOf="@+id/number_adult"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="458dp" />

            <TextView
                android:id="@+id/tv_number_Teenager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 -20 Years"
                android:textColor="#2196F3"
                app:layout_constraintEnd_toEndOf="@+id/tv_teenager"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_teenager"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="484dp" />

            <TextView
                android:id="@+id/tv_childreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Childreen"
                android:textColor="#2196F3"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tv_number_Teenager"
                app:layout_constraintHorizontal_bias="0.058"
                app:layout_constraintStart_toStartOf="@+id/tv_number_Teenager"
                app:layout_constraintTop_toBottomOf="@+id/tv_number_Teenager" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 - 14 Years"
                android:textColor="#2196F3"
                app:layout_constraintEnd_toEndOf="@+id/tv_childreen"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_childreen"
                tools:layout_editor_absoluteY="551dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/One_Way"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toStartOf="@+id/One_Way"
                app:layout_constraintTop_toBottomOf="@+id/One_Way" />

            <TextView
                android:id="@+id/tv_code_penerbangan_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="SUB"
                android:textColor="#0A48FB"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tv_to"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_to"
                app:layout_constraintTop_toBottomOf="@+id/tv_to"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/et_tujuanterbang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="182dp"
                android:layout_marginTop="12dp"
                android:hint="surabaya"
                android:textColorHint="#2196F3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_from"
                app:layout_constraintTop_toBottomOf="@+id/tv_code_penerbangan_to"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_return_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Return Date"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/et_tujuanterbang"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="@+id/et_tujuanterbang"
                app:layout_constraintTop_toBottomOf="@+id/et_tujuanterbang"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/et_Return_Date"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:hint="13/11/2022"
                android:inputType="date"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/et_DepartureDate"
                app:layout_constraintTop_toTopOf="@+id/tv_return_Date"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_minus_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="108dp"
                android:background="@drawable/rounded"
                android:text="-"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_adult"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="396dp" />

            <TextView
                android:id="@+id/tv_value_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_plus_adult"
                app:layout_constraintHorizontal_bias="0.866"
                app:layout_constraintStart_toEndOf="@+id/btn_minus_plus"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="416dp" />

            <Button
                android:id="@+id/btn_plus_adult"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text="+"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.847"
                app:layout_constraintStart_toEndOf="@+id/btn_minus_plus"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="396dp" />

            <Button
                android:id="@+id/btn_minus_tenager"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text=" - "
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/btn_minus_plus"
                app:layout_constraintStart_toStartOf="@+id/btn_minus_plus"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="458dp" />

            <TextView
                android:id="@+id/tv_value_teenager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/btn_minus_tenager"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="477dp" />

            <Button
                android:id="@+id/btn_plus_teenager"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text="+"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.72"
                app:layout_constraintStart_toEndOf="@+id/tv_value_teenager"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="458dp" />

            <Button
                android:id="@+id/btn_minus_childreen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text="-"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/btn_minus_tenager"
                app:layout_constraintStart_toStartOf="@+id/btn_minus_tenager"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="519dp" />

            <TextView
                android:id="@+id/tv_value_childreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_plus_children"
                app:layout_constraintHorizontal_bias="0.565"
                app:layout_constraintStart_toEndOf="@+id/btn_minus_childreen"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="538dp" />

            <Button
                android:id="@+id/btn_plus_children"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text="+"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/btn_plus_teenager"
                app:layout_constraintStart_toStartOf="@+id/btn_plus_teenager"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="520dp" />

            <Button
                android:id="@+id/btn_Economy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Economy"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/btn_Bussiness"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="591dp" />

            <Button
                android:id="@+id/btn_Bussiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bussiness"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/btn_search_Flight"
                app:layout_constraintStart_toStartOf="@+id/btn_search_Flight"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="591dp" />

            <Button
                android:id="@+id/btn_Firstclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="First Class"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/btn_Bussiness"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="591dp" />

            <Button
                android:id="@+id/btn_search_Flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Search Flight"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_Bussiness"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>