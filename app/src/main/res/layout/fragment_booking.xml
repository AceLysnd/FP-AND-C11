                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/et_Departure_date"
                app:layout_constraintHorizontal_bias="0.212"
                app:layout_constraintStart_toStartOf="@+id/et_Departure_date" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="236dp"
                android:textStyle="bold"
                android:text="Adult"
                android:textColor="#3F51B5"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView8"
                app:layout_constraintHorizontal_bias="0.343"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="216dp"
                android:text="@string/textnilaiadult"
                android:textColor="#3F51B5"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.076"
                app:layout_constraintStart_toStartOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="188dp"
                android:text="@string/teenager"
                android:textColor="#3F51B5"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_text_tenager"
                android:textColor="#3F51B5"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintHorizontal_bias="0.026"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="140dp"
                android:text="@string/children"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView10" />

            <TextView
                android:layout_width="49dp"
                android:layout_height="22dp"
                android:text="@string/children_value"
                android:textColor="#3F51B5"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView11"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_value_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="232dp"
                android:text="@string/angka"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_plus_adult"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/btn_minusadult"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_minusadult"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginStart="116dp"
                android:background="@drawable/rounded"
                android:text="@string/min_adult"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.621"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_plus_adult"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="224dp"
                android:background="@drawable/rounded"
                android:text="@string/plus_adult"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.095"
                app:layout_constraintStart_toEndOf="@+id/btn_minusadult"
                app:layout_constraintTop_toBottomOf="@+id/et_Return_Date"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_minus_teenager"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginBottom="168dp"
                android:background="@drawable/rounded"
                android:text="@string/btn_min_teenager"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_minusadult"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btn_minusadult" />

            <Button
                android:id="@+id/btn_plus_teenager"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded"
                android:text="@string/btn_plus_teenager"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_plus_adult"
                app:layout_constraintStart_toStartOf="@+id/btn_plus_adult"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="413dp" />

            <TextView
                android:id="@+id/tv_value_teenager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_teenager"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_plus_teenager"
                app:layout_constraintStart_toEndOf="@+id/btn_minus_teenager"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="426dp" />

            <Button
                android:id="@+id/btn_minus_children"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded"
                android:text="@string/minus_children"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_minus_teenager"
                app:layout_constraintStart_toStartOf="@+id/btn_minus_teenager"
                tools:layout_editor_absoluteY="466dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_value_children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_children"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_plus_children"
                app:layout_constraintStart_toEndOf="@+id/btn_minus_children"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="478dp" />

            <Button
                android:id="@+id/btn_plus_children"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded"
                android:text="@string/pluschildren"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_plus_teenager"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btn_plus_teenager"
                app:layout_constraintTop_toBottomOf="@+id/btn_plus_teenager"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_economy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="48dp"
                android:text="@string/economy"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_Bussiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="48dp"
                android:text="@string/bussiness"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_economy"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_firstclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:text="@string/first_class"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.676"
                app:layout_constraintStart_toEndOf="@+id/btn_Bussiness"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_Searchflight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/search_flight"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/btn_Bussiness"
                app:layout_constraintStart_toStartOf="@+id/btn_Bussiness"
                app:layout_constraintTop_toTopOf="@+id/btn_Bussiness"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>