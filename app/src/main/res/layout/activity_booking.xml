<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_booking"
            android:layout_width="359dp"
            android:layout_height="695dp"
            app:cardBackgroundColor="#AEDBCE"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_roundtrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:text="Round Trip"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.093"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.024" />

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="From"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_roundtrip"
                    app:layout_constraintVertical_bias="0.019" />

                <TextView
                    android:id="@+id/kode_Penerbangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="28dp"
                    android:text="SUB"
                    android:textColor="#0A48FB"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/from"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/et_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="surabaya"
                    android:inputType="text"
                    android:textColorHint="#2196F3"
                    app:layout_constraintBottom_toTopOf="@+id/Departure_Date"
                    app:layout_constraintTop_toBottomOf="@+id/kode_Penerbangan"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="40dp" />

                <TextView
                    android:id="@+id/Departure_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="284dp"
                    android:text="Departure Date"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/et_DepartureDate"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="40dp" />

                <EditText
                    android:id="@+id/et_DepartureDate"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="340dp"
                    android:hint="11/01/2022"
                    android:inputType="date"
                    android:textColorHint="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/Pasenger"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="40dp" />

                <TextView
                    android:id="@+id/Pasenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Pasenggers"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="47dp"
                    tools:layout_editor_absoluteY="403dp" />

                <TextView
                    android:id="@+id/tv_adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:text="Adult"
                    android:textColor="#2196F3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/Pasenger"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/Pasenger"
                    app:layout_constraintTop_toBottomOf="@+id/Pasenger" />

                <TextView
                    android:id="@+id/number_adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="21+"
                    android:textColor="#2196F3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_adult"
                    tools:layout_editor_absoluteX="47dp" />

                <TextView
                    android:id="@+id/tv_teenager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="24dp"
                    android:text="Teenager"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/number_adult" />

                <TextView
                    android:id="@+id/tv_number_Teenager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 -20 Years"
                    android:textColor="#2196F3"
                    tools:layout_editor_absoluteX="44dp"
                    tools:layout_editor_absoluteY="541dp" />

                <TextView
                    android:id="@+id/tv_childreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:text="Childreen"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="581dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:text="0 - 14 Years"
                    android:textColor="#2196F3"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="600dp" />

                <Button
                    android:id="@+id/btn_oneway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:text="One Way"
                    android:textAllCaps="false"
                    tools:layout_editor_absoluteX="208dp"
                    tools:layout_editor_absoluteY="16dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>