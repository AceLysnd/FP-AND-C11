<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#62B6B7">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="30dp"
            android:background="#97DECE"
            tools:ignore="UnusedAttribute">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#DEF5E5">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp"
                        tools:ignore="MissingConstraints">
                        <Button
                            android:id="@+id/btn_roundtrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Round Trip"
                            android:textAllCaps="false"
                            android:background="@drawable/rounded"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"/>
                        <TextView
                            android:id="@+id/from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/kode_Penerbangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUB"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="#0A48FB"
                            android:paddingTop="10dp"
                            android:layout_gravity="center"/>
                        <EditText
                            android:id="@+id/et_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="surabaya"
                            android:textColorHint="#2196F3"
                            android:layout_gravity="center"
                            android:paddingTop="15dp"/>
                        <TextView
                            android:id="@+id/Departure_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Departure Date"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"/>
                        <EditText
                            android:id="@+id/et_DepartureDate"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:hint="11/01/2022"
                            android:textColorHint="@color/black"
                            android:inputType="date"/>
                        <TextView
                            android:id="@+id/Pasenger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pasenggers"
                            android:layout_marginTop="50dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_adult"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Adult"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:textColor="#2196F3"/>
                        <TextView
                            android:id="@+id/number_adult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21+"
                            android:layout_gravity="center"
                            android:textColor="#2196F3"/>
                        <TextView
                            android:id="@+id/tv_teenager"
                            android:text="Teenager"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:textColor="#2196F3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_number_Teenager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 -20 Years"
                            android:textColor="#2196F3"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_childreen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Childreen"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold"
                            android:textColor="#2196F3"
                            android:layout_gravity="center"/>
                        <TextView
                            android:text="0 - 14 Years"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2196F3"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true"
                        tools:ignore="UselessLeaf">

                        <Button
                            android:id="@+id/btn_oneway"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One Way"
                            android:textAllCaps="false"
                            android:background="@drawable/rounded"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:id="@+id/tv_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tv_code_penerbangan_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUB"
                            android:textColor="#0A48FB"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            />
                        <EditText
                            android:id="@+id/et_tujuanterbang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="surabaya"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColorHint="#2196F3"
                            />
                        <TextView
                            android:id="@+id/tv_return_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Return Date"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="35dp"/>
                        <EditText
                            android:id="@+id/et_Return_Date"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="13/11/2022"
                            android:textColorHint="@color/black"
                            android:layout_gravity="center"
                            android:inputType="date"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="85dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_minus_adult"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/rounded"
                                android:text=" - "
                                android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/tv_value_adult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:layout_marginStart="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <Button
                                android:id="@+id/btn_plus_adult"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/rounded"
                                android:layout_marginStart="10dp"
                                android:text="+"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp">
                            <Button
                                android:id="@+id/btn_minus_teenager"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/rounded"

                                android:text="-"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/tv_value_teenager"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:layout_marginStart="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <Button
                                android:id="@+id/btn_plus_teenager"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/rounded"
                                android:layout_marginStart="10dp"
                                android:text="+"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp">
                            <Button
                                android:id="@+id/btn_minus_childreen"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/rounded"

                                android:text="-"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/tv_value_childreen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:layout_marginStart="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <Button
                                android:id="@+id/btn_plus_children"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/rounded"
                                android:layout_marginStart="10dp"
                                android:text="+"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <Button
                        android:id="@+id/btn_Economy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economy"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"/>
                    <Button
                        android:id="@+id/btn_Bussiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bussiness"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"/>
                    <Button
                        android:id="@+id/btn_Firstclass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Class"
                        android:layout_marginStart="10dp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_search_Flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Search Flight"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>